{
	"name": "erayaydin/html5-generator",
	"description": "HTML5 Generator",
	"keywords": ["html5", "boilerplate", "generator"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.2.*",
        "Chumper/Zipper": "0.5.0"
	},
    "require-dev": {
      "phpunit/phpunit": "~4.0"
    },
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
